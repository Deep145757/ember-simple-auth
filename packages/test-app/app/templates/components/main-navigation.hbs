<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  {{#link-to 'index' classNames='navbar-brand'}}
    Home
  {{/link-to}}
  <ul class="navbar-nav mr-auto">
    <li class='nav-item'>
      {{#link-to 'protected' class='nav-link'}}
        Protected Page
      {{/link-to}}
    </li>
    <li class='nav-item'>
      {{#link-to 'engine.protected' class='nav-link'}}
        Protected Engine Page
      {{/link-to}}
    </li>
    <li class='nav-item'>
      {{#link-to 'engine.open-only' class='nav-link'}}
        Open-only Engine Page
      {{/link-to}}
    </li>
    <li class='nav-item'>
      {{#link-to 'auth-error' class='nav-link'}}
        Auth Error Page
      {{/link-to}}
    </li>
  </ul>
  <form class="form-inline">
    {{! display logout button when the session is authenticated, login button otherwise }}
    {{#if this.session.isAuthenticated}}
      {{#if this.sessionAccount.account}}
        <span class="navbar-text mr-3">Signed in as {{this.sessionAccount.account.name}}</span>
      {{/if}}
      <a {{action 'logout'}} class="btn btn-danger" href="#" role="button">Logout</a>
    {{else}}
      <a {{action @onLogin}} class="btn btn-success" href="#" role="button">Login</a>
    {{/if}}
  </form>
